rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -----------------------------------------------------------------------
    // Board metadata: boards/{boardId}/metadata/config
    // -----------------------------------------------------------------------
    match /boards/{boardId}/metadata/config {
      allow read: if request.auth != null;
      allow create: if request.auth != null
                    && request.resource.data.createdBy == request.auth.uid;
      allow update, delete: if request.auth != null
                            && resource.data.createdBy == request.auth.uid;
    }

    // -----------------------------------------------------------------------
    // Board objects: boards/{boardId}/objects/{objectId}
    // Auth users can read/write if:
    //   - board is public, OR
    //   - they are the board creator, OR
    //   - their email is in invitedEmails
    // -----------------------------------------------------------------------
    match /boards/{boardId}/objects/{objectId} {
      function boardMeta() {
        return get(/databases/$(database)/documents/boards/$(boardId)/metadata/config).data;
      }

      allow read, write: if request.auth != null
                         && (boardMeta().isPublic == true
                             || boardMeta().createdBy == request.auth.uid
                             || request.auth.token.email in boardMeta().invitedEmails);
    }

    // -----------------------------------------------------------------------
    // Chat messages: boards/{boardId}/messages/{messageId}
    // -----------------------------------------------------------------------
    match /boards/{boardId}/messages/{messageId} {
      function canAccessBoard() {
        let meta = get(/databases/$(database)/documents/boards/$(boardId)/metadata/config).data;
        return meta.isPublic == true
            || meta.createdBy == request.auth.uid
            || request.auth.token.email in meta.invitedEmails;
      }

      allow read: if request.auth != null && canAccessBoard();
      allow create: if request.auth != null
                    && canAccessBoard()
                    && (request.resource.data.senderId == request.auth.uid
                        || request.resource.data.senderId == 'ai');
      // Allow sender to update their own messages, or anyone to update AI status fields
      allow update: if request.auth != null
                    && (request.auth.uid == resource.data.senderId
                        || request.resource.data.keys().hasOnly(['aiStatus', 'content', 'aiError']));
      allow delete: if request.auth != null
                    && get(/databases/$(database)/documents/boards/$(boardId)/metadata/config).data.createdBy == request.auth.uid;
    }

    // -----------------------------------------------------------------------
    // User profiles: users/{userId}/profile/info
    // Users can only read/write their own profile.
    // -----------------------------------------------------------------------
    match /users/{userId}/profile/info {
      allow read, write: if request.auth != null
                         && request.auth.uid == userId;
    }
  }
}
